@page "{id:int}"
@model Blueweb.Pages.Details.DetailsModel
@{
    ViewData["Title"] = $"{Model.User.username}'s Page";
}

<div class="container my-5">
    <div class="row g-4">
        <!-- Profile Info -->
        <div class="col-md-4 text-center">
            <img src="@Model.User.ProfileImagePath" alt="Profile Picture" class="img-fluid rounded-circle profile-img mb-3" />
            <h2 class="fw-bold" style="font-family: 'DM Serif Display', serif;">@Model.User.username</h2>
            <p class="text-muted">@Model.User.description</p>
            <small class="text-secondary">Joined: @Model.User.JoinDate.ToString("MMMM yyyy")</small>
        </div>

        <!-- Journal -->
        <div class="col-md-8">
            <h3 class="mb-4" style="font-family: 'DM Serif Display', serif;">✦ @Model.User.username's Journal</h3>
            @if (Model.Posts.Any())
            {
                foreach (var post in Model.Posts)
                {
                    <div class="card mb-4 post-card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@post.Title</h5>
                            <h6 class="card-subtitle text-muted mb-2">@post.CreatedAt.ToString("MMMM dd, yyyy")</h6>
                            <p class="card-text">@post.Content</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No journal entries yet.</p>
            }
        </div>
    </div>
</div>
